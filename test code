choices = int(input("Choose an option: " "\n""1. I need recovery assistance" "\n""2. I want to assist in recovering someone" "\n""3. Login (Under Construction)""\n""4. Sign-up (Under Construction)" "\n"))
def choice():
        if choices == 1:
            print(name = input("Name: "))
            print(location = input("Location: "))
            print(vehicle_make = input("Vehicle Make: "))
            print(vehicle_model = input("Vehicle Model: "))
            print(recovery_desc = input("Description of Recovery Needs: "))  
            choices -= 1
        elif choice == 2:
            print(name = input("Name: "))
            print(location = input("Location: "))
            print(vehicle_make = input("Vehicle Make: "))
            print(vehicle_model = input("Vehicle Model: "))
            print(recovery_gear = input("List of Recovery Gear:  "))
            choices -= 1
        elif choice == 3:
            print("Option is under construction, please choose option 1 or 2 at this time." "\n")
            choices -= 1
        elif choice == 4:
            print("Option is under construction, please choose option 1 or 2 at this time." "\n")
            choices -=1
        else:
            print("Invalid entery, please choose option 1 or 2 at this time.")
           



        


